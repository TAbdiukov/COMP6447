#!/usr/bin/python3

from pwn import *

def main():
	PROGRAM_NAME = "1001"
	r = remote('plzpwn.me', 1001)
	
	while(1):
		r.recvuntil('Solve the following math problems before time runs out',timeout=5)
		print("begin!")

		first = r.recvuntil(' + ', timeout=2).strip()
		print("first: "+first)
		second = r.recvuntil(' ', timeout=2).strip()
		print("second: "+second)

		result = str(int(first) + int(second))
		r.sendline(result)
		
		

	
if __name__ == '__main__':
	main()
